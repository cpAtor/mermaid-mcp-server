{
  "name": "mermaid-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for rendering Mermaid diagrams with beautiful-mermaid and theme-aware UI",
  "main": "dist/main.js",
  "bin": {
    "mermaid-mcp-server": "dist/main.js"
  },
  "files": [
    "dist/"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc --noEmit && tsc -p tsconfig.server.json && cross-env INPUT=mcp-app.html vite build",
    "serve": "tsx main.ts --stdio",
    "dev": "concurrently \"cross-env NODE_ENV=development INPUT=mcp-app.html vite build --watch\" \"tsx watch main.ts --stdio\"",
    "prepublishOnly": "npm run build"
  },
  "keywords": ["mcp", "mermaid", "diagram", "mcp-apps"],
  "author": "",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "@modelcontextprotocol/ext-apps": "^1.0.1",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "beautiful-mermaid": "^0.1.3",
    "mermaid": "^11.12.2",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-zoom-pan-pinch": "^3.7.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^25.2.1",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.3",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-singlefile": "^2.3.0"
  }
}
